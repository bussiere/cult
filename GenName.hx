    {
      var nn = (gender ? namesFemale : namesMale);
      if (nat < 0)
        nat = Std.random(nn.length);
      var name = nn[nat][Std.random(nn[nat].length)];
      var surname = surnames[nat][Std.random(surnames[nat].length)];

      return name + " " + surname;
    }


